                <article>
                    <img src="/images/img-macbook-pro-2019.jpg" alt="Macbook-pro" class="product_img">
                    <div class="main-article product-desc-box">
                        <i class="fas fa-truck product-delivery-icon"></i>
                        <p class="price">$230.000</p>
                        <p class="discount">20% OFF</p>
                        <h4 class="description">MacBook Pro 2019</h4>
                    </div>
                </article>
    
                <article>
                    <img src="/images/img-samsung-galaxy-s10.jpg" alt="Samsung Galaxy S10"  class="product_img">
                    <div class="main-article product-desc-box">
                        <i class="fas fa-truck product-delivery-icon"></i>
                        <p class="price">$70.500</p>
                        <p class="discount">10% OFF</p>
                        <h4 class="description">Cafetera Moulinex</h4>
                    </div>
    
                </article>
    
