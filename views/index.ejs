                    <img src="/images/img-tv-samsung-smart.jpg" alt="SmartTv Samsung 43 pulgadas" class="product_img">
                    <div class="main-article product-desc-box">
                        <i class="fas fa-truck product-delivery-icon"></i>
                        <p class="price">$23.200</p>
                        <p class="discount">5% OFF</p>
                        <h4 class="description">Samsung Galaxy S10</h4>
                    </div>
                </article>
            </div>            
        </section>
        <section class="offers">
            <h3>Sección de Ofertas</h3>
            <div class="products">
                <article> 
                    <img src="/images/img-cafetera-moulinex.jpg" alt="Cafetera Moulinex" class="product_img">
